{
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },

  "show_completions_on_input": false,

  "base_keymap": "VSCode",
  "format_on_save": "off",
  "vim_mode": true,
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "buffer_font_family": "Berkeley Mono",
  "cursor_blink": false,
  "relative_line_numbers": true,
  "scrollbar": { "show": "never" },
  "vertical_scroll_margin": 0,
  "gutter": {
    "line_numbers": true
  },
  "theme": {
    "mode": "system",
    "light": "Gruvbox Dark Hard",
    "dark": "Gruvbox Dark Hard"
  },

  "tab_bar": {
    "show": false
  },

  "command_aliases": {
    "W": "w",
    "Wq": "wq",
    "Q": "q"
  },

  "vim": {
    "use_system_clipboard": "on_yank"
  },

  "languages": {
    "PHP": {
      "language_servers": ["intelephense"]
    }
  }
}
